[sub_resource type="Shader" id=1]
code = "shader_type canvas_item;

uniform float total_wave = 5;
uniform float number_of_wave = 3;

vec4 curve(vec2 uv, float pos, vec3 color){
	float curve = 0.1 * sin((9.25 * uv.x+pos) + (2.0 * TIME)) + pos+.4;
  	return vec4(step(uv.y, curve)*color, step(uv.y, curve));
}
void fragment(){
	vec2 uv = FRAGCOORD.xy / (1.0 / SCREEN_PIXEL_SIZE);
	vec4 wave;
	//vec3 wave = curve(uv, 0., vec3(1., 0., 0.));
	for (int i = 0; i < int(ceil(number_of_wave)); i++){
		wave += curve(uv, (uv.y/total_wave)*float(i), vec3(.0,.0, float(i)/number_of_wave));
		//I could try to make a smooth transition using bezier curve
	}	
	
	//should apply the step function to the alpha too
	COLOR = vec4(wave);
}"

